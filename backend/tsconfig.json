{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "ES2021",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "target": "ES2021",
        "allowJs": true,
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
